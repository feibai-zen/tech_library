@import '../../app.wxss';

.ul {
  padding-left: 15px;
  width: 100%;
  box-sizing: border-box;
}

.li {
  width: 100%;
  box-sizing: border-box;
}

.li .navigator {
  padding-right: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding-left: 22px;
  text-overflow: ellipsis;
  height: 70rpx;
  line-height: 70rpx;
  cursor: pointer;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.li .navigator.color-active {
  color: #00acff;
}

.readed, .readed:hover {
  color: #888;
  background: url('data:image/png;base64,') no-repeat 0rpx center;
}

@media (min-width:700px) {
  .li .navigator {
    height: 56rpx;
    line-height: 56rpx;
  }
}
